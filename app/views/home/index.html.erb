<%= form_with(url: search_buffets_path, method: :get) do |f| %>
  <%= f.text_field :query %>
  <%= f.submit 'Buscar' %>
<% end %>

<h1>Buffets<h1>

<% @buffets.each do |buffet| %>
  <h3><%= link_to buffet.brand_name, buffet %></h3>
  <span>Cidade: <%= buffet.city %></span>
  <span>Estado: <%= buffet.state %></span>
<% end %>

<% if @buffets.empty? %>
  <p>NÃ£o existem Buffets cadastrados</p>
<% end %>