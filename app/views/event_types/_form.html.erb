<%= form_with(model: @event_type) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <div>
    <%= f.label :capacity_min %>
    <%= f.number_field :capacity_min %>
  </div>
  
  <div>
    <%= f.label :capacity_max %>
    <%= f.number_field :capacity_max %>
  </div>
  
  <div>
    <%= f.label :duration %>
    <%= f.number_field :duration %>
  </div>
  
  <div>
    <%= f.label :food_menu %>
    <%= f.text_area :food_menu %>
  </div>
  
  <div>
    <span>Opções de serviços:</span>
    <div>
      <%= f.check_box :alcoholic_drinks %>
      <%= f.label :alcoholic_drinks %>
    </div>
    <div>
      <%= f.check_box :decoration %>
      <%= f.label :decoration %>
    </div>
    <div>
      <%= f.check_box :parking_service %>
      <%= f.label :parking_service %>
    </div>
  </div>

  <div>
    <span>Flexibilidade de local:</span>
    <div>
      <%= f.check_box :buffet_exclusive_address %>
      <%= f.label :buffet_exclusive_address %>
    </div>
    <div>
      <%= f.check_box :client_specified_address %>
      <%= f.label :client_specified_address %>
    </div>
  </div>

  <div>
    <% if current_page?(new_event_type_path) %>
      <%= f.submit 'Cadastrar Evento' %>
    <% else %>
      <%= f.submit 'Salvar alterações' %>
    <% end %>
  </div>

<% end %>
